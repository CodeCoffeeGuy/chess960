// Study Mode - Annotated game studies
model Study {
  id          String         @id @default(cuid())
  title       String
  description String?
  ownerId     String         @map("owner_id")
  isPublic    Boolean        @default(false) @map("is_public")
  tags        String[]       @default([]) // Tags for categorization
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")
  likes       Int            @default(0)
  views       Int            @default(0)
  owner       User           @relation("StudyOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  chapters    StudyChapter[]
  comments    StudyComment[]
  likesUsers  StudyLike[]

  @@index([ownerId])
  @@index([isPublic, createdAt])
  @@map("studies")
}

model StudyLike {
  id        String   @id @default(cuid())
  studyId   String   @map("study_id")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  study     Study    @relation(fields: [studyId], references: [id], onDelete: Cascade)
  user      User     @relation("StudyLikes", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([studyId, userId])
  @@index([studyId])
  @@index([userId])
  @@map("study_likes")
}

model StudyChapter {
  id         String   @id @default(cuid())
  studyId    String   @map("study_id")
  name       String
  order      Int      @default(0)
  initialFen String   @map("initial_fen")
  pgn        String? // PGN with annotations
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  study      Study    @relation(fields: [studyId], references: [id], onDelete: Cascade)

  @@index([studyId, order])
  @@map("study_chapters")
}

model StudyComment {
  id        String   @id @default(cuid())
  studyId   String   @map("study_id")
  userId    String   @map("user_id")
  movePly   Int?     @map("move_ply") // Which move this comment refers to
  text      String
  createdAt DateTime @default(now()) @map("created_at")
  study     Study    @relation(fields: [studyId], references: [id], onDelete: Cascade)
  user      User     @relation("StudyCommentAuthor", fields: [userId], references: [id], onDelete: Cascade)

  @@index([studyId])
  @@index([userId])
  @@map("study_comments")
}

