// Opening Explorer - Opening database with statistics
model Opening {
  id               String        @id @default(cuid())
  name             String
  eco              String? // E.g., "A00", "B20"
  moves            String // UCI moves separated by spaces, e.g., "e2e4 e7e5"
  fen              String // Position after these moves
  chess960Position Int?          @map("chess960_position") // Chess960 starting position (1-960)
  createdAt        DateTime      @default(now()) @map("created_at")
  updatedAt        DateTime      @updatedAt @map("updated_at")
  movesData        OpeningMove[]
  games            OpeningGame[]

  @@unique([moves, chess960Position])
  @@index([eco])
  @@index([name])
  @@index([chess960Position])
  @@map("openings")
}

model OpeningMove {
  id          String   @id @default(cuid())
  openingId   String   @map("opening_id")
  move        String // UCI move, e.g., "e2e4"
  moveNumber  Int      @map("move_number") // 1-based move number
  gamesPlayed Int      @default(0) @map("games_played")
  gamesWon    Int      @default(0) @map("games_won")
  gamesDrawn  Int      @default(0) @map("games_drawn")
  gamesLost   Int      @default(0) @map("games_lost")
  avgRating   Decimal? @map("avg_rating") @db.Decimal(10, 2)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  opening     Opening  @relation(fields: [openingId], references: [id], onDelete: Cascade)

  @@unique([openingId, move])
  @@index([openingId, moveNumber])
  @@map("opening_moves")
}

model OpeningGame {
  id        String   @id @default(cuid())
  openingId String   @map("opening_id")
  gameId    String   @map("game_id")
  createdAt DateTime @default(now()) @map("created_at")
  opening   Opening  @relation(fields: [openingId], references: [id], onDelete: Cascade)
  game      Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([openingId, gameId])
  @@index([openingId])
  @@index([gameId])
  @@map("opening_games")
}
